<MainLayout>:
    orientation: "vertical"
    padding: 20
    spacing: 20

    Button:
        text: "Record Note"
        font_size: 24
        size_hint_y: 0.2
        on_press: root.record_note()

    Label:
        id: notes_label
        text: "Saved notes will appear here"
        font_size: 18
        halign: "left"
        valign: "top"
        text_size: self.size
